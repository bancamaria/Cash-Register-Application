package model;

public class ProductType implements Comparable<ProductType> {
    private static int idAvailable = 0;
    private final int id;
    private String productName;

    public ProductType(String productName) {
        this.id = idAvailable++;
        this.productName = productName;
    }

    public int getId() {
        return id;
    }

    public String getProductName() {
        return productName;
    }

    public void setProductName(String productName) {
        this.productName = productName;
    }

    @Override
    public boolean equals(Object ob) {
        if (this == ob) {
            return true;
        }
        if (ob == null || getClass() != ob.getClass()) {
            return false;
        }
        ProductType productType = (ProductType) ob;
        return id == productType.id;
    }

    @Override
    public String toString() {
        return "Product type{" + "id: " + id + ", product: " + productName + '\'' + '}';
    }

    @Override
    public int compareTo(ProductType productType) throws NullPointerException {
        if (productType == null) {
            throw new NullPointerException();
        }
        return Integer.compare(id, productType.id);
    }
}