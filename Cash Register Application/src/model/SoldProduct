package model;

public class SoldProduct implements Comparable<SoldProduct> {
    private final int idReceipt;
    private final int idProduct;
    private final int quantity;

    public SoldProduct(int idReceipt, int idProduct, int quantity) {
        this.idReceipt = idReceipt;
        this.idProduct = idProduct;
        this.quantity = quantity;
    }

    public int getIdReceipt() {
        return idReceipt;
    }

    public int getIdProduct() {
        return idProduct;
    }

    public int getQuantity() {
        return quantity;
    }

    @Override
    public boolean equals(Object ob) {
        if (this == ob)
            return true;
        if (ob == null || getClass() != ob.getClass())
            return false;
        SoldProduct that = (SoldProduct) ob;
        return idReceipt == that.idReceipt && idProduct == that.idProduct;
    }

    @Override
    public String toString() {
        return "SoldProduct{" + "Receipt=" + idReceipt + ", idProduct=" + idProduct + ", count=" + quantity + '}';
    }

    @Override
    public int compareTo(SoldProduct soldProduct) throws NullPointerException {
        if (soldProduct == null)
            throw new NullPointerException();
        if (idReceipt < soldProduct.idReceipt)
            return -1;
        if (idReceipt == soldProduct.idReceipt)
            return Integer.compare(idReceipt, soldProduct.idProduct);
        return 1;
    }
}